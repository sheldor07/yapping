{
  "manifest_version": 3,
  "name": "Yapping",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/assets/*.svg"],
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"]
    }
  ]
}
